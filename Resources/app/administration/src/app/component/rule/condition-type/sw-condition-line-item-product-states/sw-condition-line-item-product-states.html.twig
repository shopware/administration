{% block sw_condition_value_content %}
<div class="sw-condition-line-item-product-states sw-condition__condition-value">
    <sw-condition-operator-select
        v-bind="{ operators, condition }"
        :plural="matchesAll"
        :disabled="disabled"
    />

    <sw-single-select
        v-model="productState"
        size="medium"
        :disabled="disabled"
        :options="productStates"
        show-clearable-button
    />
</div>
{% endblock %}
