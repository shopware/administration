{% block sw_condition_value_content %}
<div class="sw-condition-order-tag sw-condition__condition-value">
    <sw-condition-operator-select
        v-bind="{ operators, condition }"
        :disabled="disabled"
    />

    <sw-entity-tag-select
        v-if="!isEmpty"
        size="medium"
        entity="tag"
        :entity-collection="tags"
        :disabled="disabled"
        @change="setTags"
    />
</div>
{% endblock %}
