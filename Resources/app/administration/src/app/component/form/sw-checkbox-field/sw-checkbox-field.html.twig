{# v-on="$listeners" needed becaues vue/compat removes them from $attrs #}
{# New mt-checkbox component #}
<mt-checkbox
    v-if="useMeteorComponent"
    v-bind="$attrs"
    v-on="$listeners"
>
    <template
        v-for="(index, name) in getSlots()"
        #[name]="data">
        <slot
            :name="name"
            v-bind="data">
        </slot>
    </template>
    <slot></slot>
</mt-checkbox>

