{# v-on="$listeners" needed becaues vue/compat removes them from $attrs #}
{# New mt-switch component #}
<mt-switch
    v-if="useMeteorComponent"
    v-bind="$attrs"
    :checked="checkedValue"
    v-on="listeners"
    @change="onChangeHandler"
>
    <slot></slot>
</mt-switch>

